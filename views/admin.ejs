<div>
    <h1 style="font-size: 40px; color: olivedrab; margin: 0">Admin Page</h1>
    <p style="font-size: 20px; color: black; margin: 10px 0 30px">
        List of all users and their roles:
    </p>

    <div
        style="
            display: flex;
            flex-direction: column;
            align-items: center;
            margin-top: 30px;
        "
    >
        <table
            style="
                border-collapse: collapse;
                width: 100%;
                max-width: 600px;
                background-color: white;
            "
        >
            <thead>
                <tr style="background-color: olivedrab; color: white">
                    <th style="padding: 12px; text-align: left">Name</th>
                    <th style="padding: 12px; text-align: left">User Type</th>
                    <th style="padding: 12px; text-align: left">Action</th>
                </tr>
            </thead>
            <tbody>
                <% users.forEach(user => { %>
                <tr style="border-bottom: 1px solid #ddd">
                    <td style="padding: 12px"><%= user.name %></td>
                    <td style="padding: 12px"><%= user.userType %></td>
                    <td style="padding: 12px">
                        <% if (user.userType === 'admin') { %>
                        <form
                            action="/demote"
                            method="post"
                            style="display: inline"
                        >
                            <input
                                type="hidden"
                                name="email"
                                value="<%= user.email %>"
                            />
                            <button
                                type="submit"
                                style="
                                    padding: 6px 12px;
                                    background-color: olivedrab;
                                    color: white;
                                    border: none;
                                    border-radius: 4px;
                                    cursor: pointer;
                                "
                            >
                                Demote
                            </button>
                        </form>
                        <% } else { %>
                        <form
                            action="/promote"
                            method="post"
                            style="display: inline"
                        >
                            <input
                                type="hidden"
                                name="email"
                                value="<%= user.email %>"
                            />
                            <button
                                type="submit"
                                style="
                                    padding: 6px 12px;
                                    background-color: olivedrab;
                                    color: white;
                                    border: none;
                                    border-radius: 4px;
                                    cursor: pointer;
                                "
                            >
                                Promote
                            </button>
                        </form>
                        <% } %>
                    </td>
                </tr>
                <% }) %>
            </tbody>
        </table>
    </div>
</div>

<%- include('templates/footer') %>
